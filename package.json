{
  "name": "tech-select",
  "version": "1.0.0",
  "description": "Full-stack tech selection application",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm run dev:backend\" \"pnpm run dev:frontend\"",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:backend": "pnpm --filter backend dev",
    "build": "pnpm run build:backend && pnpm run build:frontend",
    "build:frontend": "pnpm --filter frontend build",
    "build:backend": "pnpm --filter backend build",
    "start": "pnpm --filter backend start",
    "install:all": "pnpm install",
    "clean": "pnpm --filter frontend clean && pnpm --filter backend clean",
    "lint": "pnpm --filter frontend lint",
    "test": "pnpm --filter frontend test && pnpm --filter backend test",
    "db:migrate": "pnpm --filter backend db:migrate",
    "db:seed": "pnpm --filter backend db:seed",
    "db:studio": "pnpm --filter backend db:studio",
    "db:reset": "pnpm --filter backend db:reset",
    "db:generate": "pnpm --filter backend db:generate"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "fullstack",
    "typescript",
    "react",
    "express",
    "prisma",
    "monorepo",
    "pnpm"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
} 